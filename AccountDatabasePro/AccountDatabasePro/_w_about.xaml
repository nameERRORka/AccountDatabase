        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10"/>
        </Border.Effect>
        <Grid>
            <Label Content="Создатель сей чуда" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Foreground="#FFFFFEFE" FontFamily="Bahnschrift SemiLight Condensed" FontSize="36"/>
            <Label Content="FCORETOP" HorizontalAlignment="Left" Margin="27,113,0,0" VerticalAlignment="Top" Foreground="#FFFFFEFE" FontFamily="Bahnschrift SemiLight Condensed" FontSize="20"/>
            <Label Content="В коем то веке закончил этот проект" HorizontalAlignment="Left" Margin="27,147,0,0" VerticalAlignment="Top" Foreground="#FFFFFEFE" FontFamily="Bahnschrift SemiLight Condensed" FontSize="20"/>
            <Button Content="Закрыть" HorizontalAlignment="Left" Margin="25,250,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.64,0.501" Height="30" Width="253" FontFamily="Bahnschrift SemiLight Condensed" FontSize="18" Click="Button_Click"/>

        </Grid>
    </Border>
</Window>
